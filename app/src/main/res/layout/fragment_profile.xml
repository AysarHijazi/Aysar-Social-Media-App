<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BlankFragment1">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        cardElevation="@dimen/_10sdp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_140sdp"

                android:layout_height="@dimen/_140sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user"
                app:civ_border_color="@android:color/black"
                app:civ_border_width="1dp"
                android:layout_marginTop="10dp"
                android:id="@+id/profile_frag_image"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_frag_image"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true"
                android:text="User Name"
                android:textSize="@dimen/_20ssp"
                android:id="@+id/username_profile_frag"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_profile_frag"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="@dimen/_13ssp"
                    android:id="@+id/agetext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="team"
                    android:textSize="@dimen/_13ssp"
                    android:layout_below="@+id/agetext"
                    android:id="@+id/favoriteteamtext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="food"
                    android:textSize="@dimen/_13ssp"
                    android:layout_below="@+id/favoriteteamtext"
                    android:id="@+id/favoritefoodtext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jop"
                    android:textSize="@dimen/_13ssp"
                    android:layout_below="@+id/favoritefoodtext"
                    android:id="@+id/Joptext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="@dimen/_13ssp"
                    android:layout_below="@+id/Joptext"
                    android:id="@+id/Gendertext"/>

            </RelativeLayout>

        </RelativeLayout>










    </androidx.cardview.widget.CardView>



</RelativeLayout>
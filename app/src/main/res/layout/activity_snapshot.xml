<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".Snapshot">
    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Your Lookalike with AI"
        android:textColor="@color/black"
        android:textSize="@dimen/_24ssp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/_16sdp">

        <TextView
            android:id="@+id/subtitle_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a photo and find out who you look like!"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/takephoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@color/purple_500"
            android:text="Try Now"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@fonts/poppins_semibold"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageButton
                android:id="@+id/playpause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_play_circle_24"
                android:background="@null"
                android:padding="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/song_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Love your voice"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/poppins_semibold"
                android:padding="@dimen/_8sdp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/footer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by AI"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            ></TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
